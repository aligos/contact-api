<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Index</title>
  <style>
  * {
    font-family: Helvetica, Arial, sans-serif;
  }

  div.pic {
    padding-left: 2em;
    font-size: 1.2em;
    float: left;
    height: 400px;
  }

  div a {
    padding-left: 0.5em;
  }

  div.nav {
    float: left;
    width: 100%;
    height: 40px;
  }

  img {
    padding-right: 2em;
  }

  input {
    font-size: 1em;
  }

  dt {
    font-weight: bolder;
    display: inline-block;
    width: 4em;
  }

  dd {
    display: inline-block;
    margin-left: 0;
    line-height: 1.5;
  }

  </style>
</head>
<body>

  <div class="nav">
    <a href="/">Back to Users List</a>
  </div>


  <h1>Add new user</h1>
  <dl>
    <dt>Name</dt>
    <dd class="edit"><input id="first" type="text" placeholder="First name"><input id="last" type="text" placeholder="Last name"></dd>
    <br>
    <dt>Username</dt>
    <dd class="edit"><input id="username" type="text" placeholder="Username"></dd>
    <br>
    <dt>Title</dt>
    <dd class="edit"><input id="title" type="text" placeholder="Title"></dd>
    <br>
    <dt>Email</dt>
    <dd class="edit"><input id="email" type="email" placeholder="Email address"></dd>
    <br>
    <dt>Phone</dt>
    <dd class="edit"><input id="phone" type="text" placeholder="Phone number"></dd>
    <br>
    <dt>Company</dt>
    <dd class="edit"><input id="company" type="text" placeholder="Company"></dd>
    <br>
    <dt>Street</dt>
    <dd class="edit"><input id="street" type="text" placeholder="Street address"></dd>
    <br>
    <dt>City</dt>
    <dd class="edit"><input id="city" type="text" placeholder="City"></dd>
    <br>
    <dt>State</dt>
    <dd class="edit"><input id="state" type="text" placeholder="State"></dd>
    <br>
    <dt>Zip</dt>
    <dd class="edit"><input id="zip" type="text" placeholder="Postal code"></dd>
    <br>
    <dt></dt>
    <dd class="edit">
      <input type="submit" value="Save" onclick="save()">
    </dd>
  </dl>

  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <script>

    function save () {
      $.ajax('/adduser', {
        method: 'POST',
        data: {
          name: {
            first: $('#first').val(),
            last: $('#last').val()
          },
          username: $('#username').val(),
          title: $('#title').val(),
          email: $('#email').val(),
          phone: $('#phone').val(),
          company: $('#company').val(),
          location: {
            street: $('#street').val(),
            city: $('#city').val(),
            state: $('#state').val(),
            zip: $('#zip').val()
          }
        },
        complete: function () {
          location = '/';
        }
      })
    }
  </script>

</body>
</html>
